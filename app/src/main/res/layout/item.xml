<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/small"
    android:background="@drawable/rectangle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/question"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/font_medium"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tags"
                android:drawableLeft="@drawable/tags"
                android:textSize="@dimen/font_small"

                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user"
            android:gravity="center_vertical"
            android:layout_width="@dimen/name_width"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/font_small"

            android:layout_height="match_parent"
            />


        <ToggleButton
            android:id="@+id/likeToggle"

            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/small"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:checked="false"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/likeselector"

            />

        <ImageView
            android:id="@+id/link"

            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/medium"


            android:layout_height="match_parent"
            android:background="@drawable/link"
            />
        <TextView
            android:id="@+id/vote"
            android:textSize="@dimen/font_small"


            android:drawableRight="@drawable/upper"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/medium"

            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/last_update"
            android:drawableRight="@drawable/time"
            android:gravity="center_vertical|end"
            android:layout_marginLeft="@dimen/medium"
            android:layout_gravity="end"
            android:textSize="@dimen/font_small"


            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>




</LinearLayout>